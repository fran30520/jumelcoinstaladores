<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.goodbyeActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main10_guide1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main10_guide2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main10_guide3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="horizontal"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main10_button_exit"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main10_guide3"
        app:layout_constraintStart_toEndOf="@id/main10_guide1"
        app:layout_constraintEnd_toStartOf="@id/main10_guide2"
        android:layout_marginTop="50dp"
        app:strokeColor="@color/color_secondary_variant"
        app:strokeWidth="2dp"
        app:cornerRadius="15dp"
        android:text="@string/main10_exit"
        android:textSize="18sp"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main10_text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/main10_guide3"
        app:layout_constraintEnd_toStartOf="@id/main10_guide2"
        app:layout_constraintStart_toEndOf="@id/main10_guide1"
        android:text="@string/main10_goodbye"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/color_secondary_variant"

        />

    <ImageView
        android:id="@+id/main10_jumelcoLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/main10_text_title"
        app:layout_constraintStart_toEndOf="@id/main10_guide1"
        app:layout_constraintEnd_toStartOf="@id/main10_guide2"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_jumelco_logo_final"
        android:gravity="center"
        android:padding="20dp"
        app:strokeColor="@color/color_secondary_variant"
        app:strokeWidth="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>